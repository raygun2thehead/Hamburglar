<div id="parent">
  <div id="uneaten">
    <h2>Hamgurblars to Eat!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block }}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div id="eaten">
    <h2>Hamgurblars i Ate!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block }}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<br><br>


<div>
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burd">Burger Name:</label>
      <input type="text" id="burd" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>